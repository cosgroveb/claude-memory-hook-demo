{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/session-start-memory-check.zsh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Edit|MultiEdit|Write)$",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/remove-trailing-whitespace.sh"
          }
        ]
      }
    ]
  }
}